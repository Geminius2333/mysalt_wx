/* pages/goods/goods.wxss */
.container{
    padding:0px;
}

.row-view{
    display: flex;
    flex-direction: row;
}

.column-view{
    display: flex;
    flex-direction: column;
}

.goods-head{
    width: 750rpx;
    /* margin-bottom: 10rpx; */
}

.swiper-img{
  width: 100%;
}
/* 商品信息 */
.goods-head .head-info{
    background: white;
    margin-bottom: 10rpx;
    padding: 10rpx 20rpx;
}

.head-info .info-normal{
    font-size: large;
}
.info-normal.info-price{
    color: red;
}

/* 购买数量 */
.head-info .info-other{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    font-size: small;
    color: #999;
}

.buy-view{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border: solid 1px #d3d3d3;
    height: 60rpx;
    width: 60rpx;
}

.buy-view.disabled{
    background: #ddd;
}

.head-info .info-buy-text{
    padding: 10rpx 0;
    border-bottom: solid 1px #eeeeee;

}

.row-view.info-buy-num{
    padding: 10rpx 0;
    align-items: center;
}

.buy-view.buy-input-view{
    width: 120rpx;
}
.head-info .info-buy-num-input{
    width: 60rpx;
    /* padding-left: 20rpx;
    margin: 0 20rpx; */
}
/* 商品描述和评论 */
.goods-body{
    width: 750rpx;
    background: white;
}
.goods-body .goods-body-nav{
    display: flex;
    flex-direction: row;
}
.nav-item{
    padding: 20rpx;
    color: #999999;
}
.nav-item.active{
    border-bottom: solid 3px #971009;
    color: black;
}

.goods-description-view{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 750rpx;
    height: 750rpx;
}

/* 评论开始 */
.comment-view{
    display: flex;
    flex-direction: column;
    /* background: #d3d3d3; */
    padding: 0 10px;
    margin-bottom: 10px;
}

.comment-view .comment-top{
    display: flex;
    flex-direction: row;
    border-bottom: solid 1px #eeeeee;
}

.comment-view .comment-top .comment-user-img{
    width: 100rpx;
    height: 100rpx;
    border-radius: 45px;
}

.comment-view .comment-top .comment-top-right{
    width: 100%;
}

.comment-view .comment-top .comment-top-right .comment-top-right-item{
   display: flex;
   justify-content: space-between;
   font-size: 15px;
   padding: 5rpx;

}

.comment-post-time{
    color: #999999;
    font-size: 12px;
}

.comment-view .comment-content{
    margin:5px;
    font-size: 13px;
}

.comment-img{
    width: 200rpx;
    height: 160rpx;
}



/* 评论结束 */


/* 底部 */
.goods-bottom{
    display: flex;
    flex-direction: row;
    align-items: center;
    position: fixed;
    bottom: 0px;
    width: 100%;
    z-index: 10;
    background: white;
}

.goods-bottom .bottom-normal{
    padding:0 15rpx;
    font-size: small;
    width: 120rpx;
    text-align: center;
}

.goods-bottom .bottom-cart{
    background: #ff9400;
    color: white;
    width: 200rpx;
    padding: 22rpx 15rpx;
}

.goods-bottom .bottom-buy{
    padding: 22rpx 15rpx;
    background: #ff5555;
    color: white;
    width: 200rpx;
}
