/* pages/orders/ordersDetail/ordersDetail.wxss */
.container{
    padding:0;
    align-items: flex-start;
}
.btn{
    background-color: #ff9400;
    color: white;
    padding: 10rpx;
    border-radius: 60rpx;
    box-shadow: 0 0 10rpx #555;
}
.flex-row-between{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    justify-content: space-between;

}
.content-box{
    width: 710rpx;
    margin-bottom: 20rpx;
    padding: 0 20rpx;
    background-color: white;
}

.content-box .content-item{
    padding: 10rpx 0;
    font-size: small;
}

.status-text{
    background: #83ccd2;
    color: white;
    padding: 5rpx;

}

.border-bottom-line{
    border-bottom: solid 2rpx #eee;
}

.ordersDetail-item{
    display: flex;
    flex-direction: row;
}

.goods-box-left{
    display: flex;
}

.goods-img{
    width: 160rpx;
    height: 160rpx;
}

.goods-box-right{
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;
}

.goods-box-right text{
    padding-bottom: 10rpx;
}

.wrap-text{
    display: flex;
    word-break: break-all;
    background-color: #f7e8aa;
}