/* pages/mine/recAddress/recAddress.wxss */
.container{
  padding: 0;
}


/* 内容 */
.content{
  width: 100%;
  background: white;
}

.content .content-item{
  padding:0 5px;
  color: #837f7f;
  border-bottom: 1px solid #d3d3d3;
  border-left: solid 3px #aaaaaa;
}

.content .content-item.content-item-default{
  border-left: 3px solid #ff0094;
}

.content .content-item-text{
  font-size: 12px;
  padding:15rpx;
}
.content .content-item-text .content-text-name{
  color: black;
  font-size: 15px;
  font-style: bold;
}

.content .content-item-text .content-text-phone{
  padding-left: 5px;
}

.content .content-item .content-item-icon{
  font-size: 15px;

}

.content-item-edit .edit-label{
  margin-left: 180rpx;
}

/* 底部 */
.bottom{
  width: 100%;
  bottom: 0px;  
  position: fixed;
  background:#ff0094;
}

.bottom .add-btn{
  background-color: #ff0094;
  color: white;
  width: 750rpx;
}
