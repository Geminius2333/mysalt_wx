    <mp-cells>
      <mp-cell link hover value="我的足迹">
        <image class="cell-img" slot="title" src="{{icon}}"></image>
      </mp-cell>
      <mp-cell link hover value="我的地址">
         <image class="cell-img" slot="title" src="{{icon}}" ></image>
      </mp-cell>   
      <mp-cell link hover value="设置" >
        <image class="cell-img" slot="title" src="{{icon}}"></image>
      </mp-cell>
      <mp-cell link hover value="我的帮助">
        <image class="cell-img" slot="title" src="{{icon}}"  ></image>
      </mp-cell>  
      <mp-cell link="true" hover url="../index/index" value="index" footer="说明文字">
        <image slot="icon" src="{{icon}}" style="margin-right: 16px;vertical-align: middle;width:20px; height: 20px;"></image>
      </mp-cell>
    </mp-cells>
  </view>

  <button bindtap="getUser">获取用户</button>
</view>
