/**login.wxss**/
page{
  background: #0094ff;
  background:linear-gradient(to bottom right,#6cc8b9,50%,#3879cd);
}

.container{
  padding-top:50px;
}

.title{
  font-size: 30px;
  color: #f0229a;
}


.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo input{
  width: 600rpx;
  border-radius: 25px;
  padding:10px;
  background: #f5f5f5;
  margin:10px 0;
}
.userinfo button{
  margin-top:10px;
}

/* --- */

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}