/* pages/search/search.wxss */
.container{
    padding: 0;
}

.search-input-view{
    display: flex;
    flex-direction: row;
    margin:15rpx 10rpx 20rpx 10rpx;
    width: 730rpx;
}

.search-input{
    width:80%;
    background: white;
    padding: 10rpx 0;
    padding-left: 10rpx;
    margin-left: 20rpx;
    border-radius: 10px 0 0 10px;

}

.search-btn{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    width: 20%;
    background: #ff0094;
    color: white;
    border-radius: 0 10px 10px 0;

}

.search-history-view{
    display: flex;
    flex-direction: column;
    width: 720rpx;
    margin: 0 15rpx;
    width: 720rpx;

}

.history-view-top{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    font-size: 15px;
    color: #999;
}

.history-view-content{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.history-item{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    border: solid 1px #666;
    background: white;
    border-radius: 45px;
    text-align: center;
    width: 216rpx;
    margin: 10rpx;
}

.bottom-tip{
    color: #ff0094;
    font-size: 10px;
    text-align: center;
}