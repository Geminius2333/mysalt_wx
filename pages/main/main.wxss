/* pages/main/main.wxss */
text{ 
  overflow: hidden;
  word-break: keep-all;
  word-wrap: break-word;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
}
.container{
    padding: 0;
}

.search-view{
  padding: 10rpx 0;
  background: white;
  text-align: center;
  margin: 10rpx;
  border-radius: 30px;
  color: #999;
}

.page-body,.swiper{
  width:100%;
  text-align: center;

}

.swiper-img{
  width: 100%;
}

.home-menu{
  display: flex;
  flex-direction: row;
}

.home-menu-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  width:25%;
}

.home-menu-item1{
  background: cornflowerblue;
}

.home-menu-item2{
  background: greenyellow;
}

.home-menu-item3{
  background: hotpink;
}

.home-menu-item4{
  background: lightskyblue;
}

.goods-view{
  display: flex;
  flex-direction: row;
  flex-wrap:wrap;
}


.items{
  display: flex;
  flex-direction: column;
  width: 365rpx;
  margin: 5rpx;
  background: white;
  align-items: center;
  text-align: center;
}

.item-image{
  width:100%;
  height: 300rpx;
  /* margin-left: 10px; */
}

.item-info{
  background: white;

}

.item-info-title{
  width: 300rpx;
}


.del-price{
  text-decoration: line-through;
  font-size: 12px;
}

.price{
  color: red;
}

.item-info .add-cart-btn{
  background: #0094ff;
  color: white;
}