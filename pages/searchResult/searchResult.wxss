/* pages/searchResult/searchResult.wxss */
.container{
    padding: 0;
}
.page-top{
    width: 700rpx;
    background: white;
    padding: 10rpx 25rpx;
    border-bottom: solid 1px #eee;
    display: flex;
    flex-direction: row;
    align-items: center;

}
.search-view{
    padding: 10rpx 0;
    background: #eee;
    text-align: center;
    margin: 10rpx;
    border-radius: 30px;
    color: #999;
    width: 700rpx;
}

.page-body{
    background: white;
    width: 750rpx;
}

.menu-list{
    display: flex;
    flex-direction: row;
    padding: 10rpx 0;
    border-bottom: solid 1px #eee;
}

.menu-item{
    width: 250rpx;
    text-align: center;

}

.menu-item.active{
    width: 250rpx;
    color: #ff0094;    
}

.goods-list{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    background: #f5f5f5;

}

.goods-item{
    display: flex;
    flex-direction: column;
    width: 365rpx;
    margin: 5rpx;
    background: white;
    align-items: center;
    text-align: center;
}

.goods-image{
  width:300rpx;
  height: 300rpx;
  margin-left: 10px;
}

.goods-info{
  background: white;

}


.del-price{
  text-decoration: line-through;
  font-size: 12px;
}

.price{
  color: red;
}

.goods-info .add-cart-btn{
  background: #0094ff;
  color: white;
}

